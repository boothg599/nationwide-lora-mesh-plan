{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "corridors.geojson schema",
  "type": "object",
  "required": [
    "type",
    "features"
  ],
  "properties": {
    "type": {
      "const": "FeatureCollection"
    },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "geometry",
          "properties"
        ],
        "properties": {
          "type": {
            "const": "Feature"
          },
          "geometry": {
            "type": "object",
            "required": [
              "type",
              "coordinates"
            ],
            "properties": {
              "type": {
                "enum": [
                  "LineString",
                  "MultiLineString"
                ]
              },
              "coordinates": {}
            },
            "additionalProperties": true
          },
          "properties": {
            "type": "object",
            "required": [
              "corridor_id",
              "corridor_name",
              "corridor_class",
              "priority",
              "tierA_target_sites_min",
              "tierA_target_sites_max"
            ],
            "properties": {
              "corridor_id": {
                "type": "string",
                "pattern": "^C_[A-Z0-9_]+$"
              },
              "corridor_name": {
                "type": "string"
              },
              "corridor_class": {
                "type": "string",
                "enum": [
                  "COASTAL_SPINE",
                  "TRANS_CON",
                  "NORTH_SOUTH",
                  "RING",
                  "CONNECTOR"
                ]
              },
              "priority": {
                "type": "integer",
                "minimum": 1,
                "maximum": 5
              },
              "tierA_target_sites_min": {
                "type": "integer",
                "minimum": 0
              },
              "tierA_target_sites_max": {
                "type": "integer",
                "minimum": 0
              },
              "notes": {
                "type": "string"
              }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}